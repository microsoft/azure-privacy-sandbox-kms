{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
  },
  "include": ["src/**/*"]
}
