{
  "private": true,
  "scripts": {
    "build": "rollup --config && cp app.json dist/ && node build_bundle.js dist/",
    "bundle": "node build_bundle.js dist",
    "build-proto": "buf generate src/endpoints/proto",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "e2e-test": "node --loader ts-node/esm ./test/e2e-test/src/index.ts"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@bufbuild/buf": "1.52.0",
    "@bufbuild/protobuf": "1.10.0",
    "@bufbuild/protoc-gen-es": "1.10.0",
    "@microsoft/ccf-app": "6.0.1",
    "cbor-x": "1.6.0",
    "js-base64": "3.7.7",
    "node-forge": "1.3.1",
    "pem-jwk": "2.0.0"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/jasmine": "5.1.7",
    "@types/node": "22.15.2",
    "js-crypto-key-utils": "1.0.7",
    "js-crypto-rsa": "1.0.7",
    "rollup": "4.39.0",
    "ts-jest": "29.3.2",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.8.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "verbose": true,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
